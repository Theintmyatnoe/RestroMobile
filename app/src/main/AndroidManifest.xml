<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.restromobile">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"/>
        <activity android:name=".activity.LoginActivity"/>
        <activity android:name=".activity.DineInActivity" />
        <activity android:name=".activity.TablesListActivity" />
        <activity android:name=".activity.AddTablesActivity" />
        <activity android:name=".activity.MenuListActivity" />
        <activity android:name=".activity.AddCategoryActivity" />
        <activity android:name=".activity.CategoryListActivity" />
        <activity android:name=".activity.AddMenuListActivity" />
        <activity android:name=".activity.FoodOrderActivity" />
    </application>

</manifest>